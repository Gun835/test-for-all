toggleMihawk.Size = UDim2.new(0.9, 0, 0, 35)
toggleMihawk.Position = UDim2.new(0.05, 0, 0.25, 0)
toggleMihawk.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
